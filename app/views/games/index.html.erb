<h1>Previous games</h1>
<table class="table">
  <tr>
    <th>Opponent</th>
    <th>Date</th>
    <th>Hour</th>
    <th>At home</th>
    <th></th>
    <th>Result</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games_played.each do |game| %>
  <tr>
    <td><%= game.opponent %></td>
    <td><%= game.date %></td>
    <td><%= game.hour %></td>
    <td><%= game.at_home %></td>
    <td><% if game.goals_scored > game.goals_suffered %>
        <%= "W" %>
        <% elsif game.goals_scored < game.goals_suffered %>
        <%= "L" %>
        <% else game.goals_scored == game.goals_suffered %>
        <%= "D" %>
        <% end %></td>
    <td><%= game.goals_scored.to_s + " - " + game.goals_suffered.to_s %></td>
    <td><%= game.team.name %></td>
    <td><%= link_to 'Show', club_team_game_path(@team.club, @team, game) %></td>
    <td><%= link_to 'Edit', edit_club_team_game_path(@team.club, @team, game) %></td>
    <td><%= link_to 'Destroy', club_team_game_path(@team.club, @team, game), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

